<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://lime.openfl.org/project/1.0.4" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://lime.openfl.org/project/1.0.4 http://lime.openfl.org/xsd/project-1.0.4.xsd">

	<!-- _________________________ Application Settings _________________________ -->
	
	<app title="Cosmic Cities" file="CosmicCities" main="Main" version="1.0.0" company="OmgRod" />
	
	<!--The flixel preloader is not accurate in Chrome. You can use it regularly if you embed the swf into a html file
		or you can set the actual size of your file manually at "FlxPreloaderBase-onUpdate-bytesTotal"!-->
	<app preloader="flixel.system.FlxPreloader" />
	
	<!--Minimum without FLX_NO_GAMEPAD: 11.8, without FLX_NO_NATIVE_CURSOR: 11.2 -->
	<set name="SWF_VERSION" value="11.8" />
	
	<!-- ____________________________ Window Settings ___________________________ -->

	<icon path="assets/icons/icon16.png" size="16" />
	<icon path="assets/icons/icon32.png" size="32" />
	<icon path="assets/icons/icon48.png" size="48" />
	<icon path="assets/icons/icon64.png" size="64" />
	<icon path="assets/icons/icon128.png" size="128" />
	<icon path="assets/icons/icon256.png" size="256" />
	
	<!--These window settings apply to all targets-->
	<window width="640" height="480" fps="60" background="#000000" hardware="true" vsync="false" />
	
	<!--HTML5-specific-->
	<window if="html5" resizable="true" />
	
	<!--Desktop-specific-->
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="true" />
	
	<!--Mobile-specific-->
	<window if="mobile" orientation="landscape" fullscreen="true" width="0" height="0" />
	
	<!-- Android-specific build configuration -->
	<set name="ANDROID_SETUP" value="1" if="android" />
	<set name="HXCPP_COMPILE_THREADS" value="1" if="android" />
	<set name="HXCPP_NO_PRECOMPILED_HEADERS" value="1" if="android" />
	<set name="toolchain" value="clang" if="android" />
	
	<!-- _____________________________ Path Settings ____________________________ -->
	
	<set name="BUILD_DIR" value="export" />
	<source path="src" />
	<assets path="assets" />
	<assets path="mods" />
	
	<!-- _________________________ Mod Classes (Optional) ________________________ -->
	<!-- Uncomment to compile mod classes (CustomMenuState, etc.) -->
	<!-- WARNING: Only enable mods you trust! Compiled classes have full access. -->
	<source path="mods/example-mod/classes" if="desktop" />
	<!-- <source path="mods/your-mod-name/classes" if="desktop" /> -->
	
	<!-- _______________________________ Libraries ______________________________ -->

	<haxelib name="flixel" />
	<haxelib name="flixel-addons" />
	<haxelib name="flixel-ui" />
	<haxelib name="firetongue" />
	<haxelib name="nape-haxe4" />
	<haxelib name="hxdiscord_rpc" if="cpp unless android" unless="disable_discord" />
	<haxelib name="ase" />
	<haxelib name="actuate" />
	<haxelib name="polymod" />
	<haxelib name="hscript" />
	<!-- <haxelib name="newgrounds" if="html5" /> -->
	<haxelib name="hxcpp" if="cpp" />
	<haxelib name="cxx2hx" if="cpp" />
	<section if="steam">
		<setenv name="STEAM_APP_ID" value="480" />
		<!-- <set name="APP_FILE" value="??????" /> -->
		
		<haxelib name="steamwrap"/>
	</section>
	
	<!-- ______________________________ Haxedefines _____________________________ -->

	<haxedef name="disable_discord" unless="enable_discord" />
	
	<!--Remove the legacy health system-->
	<haxedef name="FLX_NO_HEALTH" />
	
	<!--Enable the Flixel core recording system-->
	<!--<haxedef name="FLX_RECORD" />-->
	
	<!--Disable the right and middle mouse buttons-->
	<!--<haxedef name="FLX_NO_MOUSE_ADVANCED" />-->
	
	<!--Disable the Native cursor api for Flash target-->
	<!--<haxedef name="FLX_NO_NATIVE_CURSOR" />-->
	
	<!--Optimise inputs, be careful you will get null errors if you don't use conditionals in your game-->
	<!-- <haxedef name="FLX_NO_MOUSE" /> -->
	<!-- <haxedef name="FLX_NO_KEYBOARD" /> -->
	<haxedef name="FLX_NO_TOUCH" if="desktop" />
	
	<!--HTML5-specific optimizations-->
	<haxedef name="FLX_NO_GAMEPAD" if="html5" />
	<haxedef name="FLX_NO_NATIVE_CURSOR" if="html5" />

	<!--Android-specific optimizations-->
	<haxedef name="HXCPP_NO_PRECOMPILED_HEADERS" if="android" />

	<!--<haxedef name="FLX_NO_GAMEPAD" />-->
	
	<!--Disable the Flixel core sound tray-->
	<!--<haxedef name="FLX_NO_SOUND_TRAY" />-->
	
	<!--Disable the Flixel sound management code-->
	<!-- <haxedef name="FLX_NO_SOUND_SYSTEM" /> -->
	
	<!--Disable the Flixel core focus lost screen-->
	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	
	<!--Disable the Flixel core debugger. Automatically gets set whenever you compile in release mode!-->
	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	
	<!--Enable this for Nape release builds for a serious peformance improvement-->
	<haxedef name="NAPE_RELEASE_BUILD" unless="debug" />
	
	<!-- _________________________________ Custom _______________________________ -->

</project>
