@echo off
REM Auto-generated by CMake from run.bat.in
REM Launch Cosmic Cities from the build output folder.

setlocal
set BUILD_DIR=@CMAKE_BUILD_RELATIVE_DIR@

REM Normalize to Windows path separators
set BUILD_DIR=%BUILD_DIR:/=\%

REM Choose config folder (Debug/Release) if present
set BIN_DIR=%BUILD_DIR%\bin
if exist "%BIN_DIR%\Debug" (
  set BIN_DIR=%BIN_DIR%\Debug
) else if exist "%BIN_DIR%\Release" (
  set BIN_DIR=%BIN_DIR%\Release
)

REM Set working directory to project root so Content path resolves
pushd "%~dp0"

REM Run the game executable
if exist "%BIN_DIR%\CosmicCities.exe" (
  echo Running CosmicCities from "%BIN_DIR%\CosmicCities.exe"
  "%BIN_DIR%\CosmicCities.exe"
) else (
  echo ERROR: Could not find CosmicCities.exe in "%BIN_DIR%".
  echo Ensure the project is built: cmake --build build --config Debug
  exit /b 1
)

popd
endlocal
